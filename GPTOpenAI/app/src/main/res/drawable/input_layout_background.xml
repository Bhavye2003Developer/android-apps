<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#121212" /> <!-- Dark background color -->
            <corners android:radius="4dp" /> <!-- Rounded corners, adjust as needed -->
        </shape>
    </item>

    <!-- Border stroke (optional) -->
    <item android:id="@+id/border">
        <shape android:shape="rectangle">
            <solid android:color="#00000000" /> <!-- Transparent color for the border -->
            <stroke
                android:width="1dp"
                android:color="#555555" /> <!-- Border color, adjust as needed -->
            <corners android:radius="4dp" /> <!-- Rounded corners, adjust as needed -->
        </shape>
    </item>
</layer-list>
